<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/setting_default_sms_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="56dp"
        android:text="@string/setting_default_sms_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/import_inner_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/import_inner_data"
        app:layout_constraintEnd_toEndOf="@+id/setting_default_sms_app"
        app:layout_constraintStart_toStartOf="@+id/setting_default_sms_app"
        app:layout_constraintTop_toBottomOf="@+id/setting_default_sms_app" />

    <Button
        android:id="@+id/import_from_outer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/import_from_outer"
        app:layout_constraintEnd_toEndOf="@+id/import_inner_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/import_inner_data"
        app:layout_constraintTop_toBottomOf="@+id/import_inner_data" />

    <TextView
        android:id="@+id/default_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_default_sms_app"
        app:layout_constraintStart_toEndOf="@+id/setting_default_sms_app"
        app:layout_constraintTop_toTopOf="@+id/setting_default_sms_app"
        app:layout_constraintVertical_bias="0.448" />
</android.support.constraint.ConstraintLayout>